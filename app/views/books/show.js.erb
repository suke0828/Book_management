var modal_id 		= document.getElementById('modal_show');
var modal_class = document.getElementsByClassName('modal');

// id属性modalの中身を_modalの内容に置き換える
modal_id.innerHTML = "<%= escape_javascript(render 'modal', locals: { book: @book}) %>";

// bulmaの修飾子{is-active}をclass属性に付与してモーダルウィンドウを表示する
modal_class[0].classList.add('is-active');

// 画面をクリックしたときにis-activeを削除してモーダルウインドウを閉じる
modal_id.addEventListener('click', () => {
  modal_class[0].classList.remove('is-active');
});
